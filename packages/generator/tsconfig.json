{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "lib": ["ES2022"]
    },
    "include": ["src/**/*", "templates/**/*"]
}
