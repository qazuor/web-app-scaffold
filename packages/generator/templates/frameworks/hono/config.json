{
    "$schema": "../../framework.schema.json",
    "name": "hono",
    "displayName": "Hono backend application",
    "description": "Hono is a lightweight framework for building APIs and web applications. It provides a simple and intuitive API for creating fast and efficient applications with minimal overhead.",
    "defaultAppName": "hono-app",
    "defaultAppDescription": "A Hono app",
    "dependencies": [
        {
            "name": "hono",
            "version": "^4.0.0"
        },
        {
            "name": "@hono/tailwind",
            "version": "^3.0.0"
        }
    ],
    "devDependencies": [
        {
            "name": "@hono/partytown",
            "version": "^2.0.0"
        },
        {
            "name": "@hono/image",
            "version": "^2.0.0"
        }
    ],
    "hasUI": false,
    "addBiome": true,
    "addTesting": true,
    "testingDependencies": [
        {
            "name": "vitest",
            "version": "^0.30.0"
        },
        {
            "name": "@testing-library/react",
            "version": "^13.0.0"
        }
    ],
    "testingScripts": [
        {
            "name": "test",
            "code": "vitest"
        },
        {
            "name": "test:watch",
            "code": "vitest --watch"
        }
    ]
}
