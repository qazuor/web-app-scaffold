{
    "name": "{{appName}}",
    "version": "0.1.0",
    "description": "{{description}}",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "biome lint --config-path=./config/biome.json ./src",
        "format": "biome format --config-path=./config/biome.json --write ./src",
        "check": "biome check --config-path=./config/biome.json --apply ./src",
        "test": "vitest run --coverage"
    },
    "dependencies": {
        "@hono/node-server": "^1.14.1",
        "hono": "^4.7.7"
    },
    "devDependencies": {
        "@repo/config": "workspace:*",
        "@types/node": "^22.14.1",
        "typescript": "^5.8.3",
        "vite": "^6.3.1",
        "vitest": "^3.1.2",
        "vite-plugin-node": "^5.0.1",
        "cross-env": "^7.0.3",
        "tsx": "^4.19.3"
    }
}
