{
    "$schema": "../../framework.schema.json",
    "name": "astro",
    "displayName": "Astro + React",
    "description": "Static site generator with Tailwind and React islands",
    "defaultAppName": "astro-site",
    "defaultAppDescription": "A modern static site built with Astro Tailwind and React islands",
    "dependencies": [
        {
            "name": "@astrojs/react",
            "version": "^4.2.7"
        },
        {
            "name": "@astrojs/sitemap",
            "version": "^3.3.1"
        },
        {
            "name": "@tailwindcss/vite",
            "version": "^4.1.5"
        },
        {
            "name": "astro",
            "version": "^5.7.10"
        },
        {
            "name": "react",
            "version": "^19.1.0"
        },
        {
            "name": "react-dom",
            "version": "^19.1.0"
        },
        {
            "name": "tailwindcss",
            "version": "^4.1.5"
        },
        {
            "name": "@repo/logger",
            "version": "workspace:*"
        }
    ],
    "devDependencies": [
        {
            "name": "@repo/config",
            "version": "workspace:*"
        },
        {
            "name": "@types/react",
            "version": "^19.1.2"
        },
        {
            "name": "@types/react-dom",
            "version": "^19.1.3"
        },
        {
            "name": "typescript",
            "version": "^5.3.3"
        }
    ],
    "scripts": [
        {
            "name": "dev",
            "command": "astro dev"
        },
        {
            "name": "build",
            "command": "astro build"
        },
        {
            "name": "preview",
            "command": "astro preview"
        },
        {
            "name": "astro",
            "command": "astro"
        },
        {
            "name": "lint",
            "command": "biome check ."
        },
        {
            "name": "format",
            "command": "biome format --write ."
        }
    ],
    "envVars": [
        {
            "name": "PUBLIC_SITE_URL",
            "value": "http://localhost:4321"
        },
        {
            "name": "PUBLIC_API_URL",
            "value": "http://localhost:3000"
        }
    ],
    "hasUI": true,
    "addBiome": true,
    "addTesting": true,
    "testingDependencies": [
        {
            "name": "vitest",
            "version": "^1.3.0"
        },
        {
            "name": "@vitest/coverage-v8",
            "version": "^1.3.0"
        },
        {
            "name": "@testing-library/react",
            "version": "^14.1.2"
        },
        {
            "name": "@testing-library/jest-dom",
            "version": "^6.1.5"
        }
    ],
    "testingScripts": [
        {
            "name": "test",
            "command": "vitest run"
        },
        {
            "name": "test:watch",
            "command": "vitest"
        },
        {
            "name": "test:coverage",
            "command": "vitest run --coverage"
        }
    ]
}
