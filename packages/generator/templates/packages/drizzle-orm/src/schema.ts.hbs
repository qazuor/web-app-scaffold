import { table } from 'console';
import { title } from 'process';
import {
{
    tableType;
}
as;
table, { {columnTypes };
} } from "drizzle-orm/{{provider}}-core"

export const users = table("users", {
    id: {{idType}}.primaryKey(),
    "name": {{stringType}}.notNull(),
    email: {{stringType}}.notNull().unique(),
    createdAt: {{timestampType}}.notNull().defaultNow(),
})

export const posts = table("posts", {
    id: {{idType}}.primaryKey(),
    title: {{stringType}}.notNull(),
    content: {{stringType}}.notNull(),
    authorId: {{idType}}
        .notNull()
        .references(() => users.id),
    createdAt: {{timestampType}
}.notNull().defaultNow(),
})
